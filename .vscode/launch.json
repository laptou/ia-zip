    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha Tests",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector",
            "timeout": 30000,
            "smartStep": true,
            "skipFiles": [
                "node_modules/**/*.js",
                "lib/**/*.js",
                "async_hooks.js",
                "inspector_async_hook.js"
            ],
            "stopOnEntry": false
        }
    ]
}